<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/pupuk_card_view"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        android:focusable="true">

    <ImageView
        android:id="@+id/gambar_pupuk"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nama_pupuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_above="@+id/gambar_pupuk"
        android:layout_below="@id/harga_pupuk"
        android:padding="3dp"/>
    <TextView
        android:id="@+id/harga_pupuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_above="@+id/harga_pupuk"
        android:maxLines="2"
        android:paddingBottom="10dp"/>
</LinearLayout>